export PATH=$PATH:/usr/local/git/bin:/usr/local/bin

if [[ -a ~/.local.zshrc ]]; then
	source ~/.local.zshrc
fi

# basic aliases
alias ls='ls -FG'
alias vi='nvim'
alias vim='nvim'

# git aliases
alias gs='git status'
alias gl='git pull'
alias gp='git push'
alias gd='git diff'
alias oops='git reset --soft HEAD^'

gc () {
	git commit -am $1
}

gk () {
	git checkout $1
}

gb () {
git checkout -b $1
}

alias python='python3'
alias cclip='xclip -selection clipboard'
